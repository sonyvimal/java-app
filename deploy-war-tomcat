node{
   stage('SCM Checkout'){
     git 'https://github.com/javahometech/my-app'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven-3', type: 'maven'
      sh "${mvnHome}/bin/mvn package"
   }

   stage('SonarQube analysis') {
     withSonarQubeEnv('Sonar-7.7') {
       // requires SonarQube Scanner for Maven 3.2+
       sh 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.2:sonar'
     }
   }
   stage('Sonar Code Quality Gate'){
           timeout(time: 1, unit: 'HOURS') {
               def qg = waitForQualityGate()
               if (qg.status != 'OK') {
               slackSend baseUrl: 'https://hooks.slack.com/services/',
               channel: '#gta',
               color: 'danger',
               message: 'Sonar Code Quality Analysis Failed',
               teamDomain: 'devops-lcc7986.slack.com',
               tokenCredentialId: 'slack-demo'
               error "Pipeline aborted due to quality gate failure: ${qg.status}"
       }
     }
   }
   stage('Deploy to Tomcat Server'){
        cp target/*.war /Users/sonr/tools/installer/tomcat-2/apache-tomcat-9.0.16/webapps
   }
   stage('Email Notification'){
      mail bcc: '', body: '''Hi Welcome to jenkins email alerts
      Thanks
      Hari''', cc: '', from: '', replyTo: '', subject: 'Jenkins Job', to: 'hari.kammana@gmail.com'
   }
   stage('Slack Notification'){
       slackSend baseUrl: 'https://hooks.slack.com/services/',
       channel: '#jenkins-pipeline-demo',
       color: 'good',
       message: 'Welcome to Jenkins, Slack!',
       teamDomain: 'javahomecloud',
       tokenCredentialId: 'slack-demo'
   }

}
